<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Operator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/buttonEmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emit"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/buttonOperator"
        app:layout_constraintBottom_toBottomOf="@+id/buttonOperator"
        app:layout_constraintTop_toTopOf="@+id/buttonOperator" />

    <TextView
        android:id="@+id/textResponse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="3"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/buttonOperator"
        app:layout_constraintTop_toBottomOf="@+id/buttonOperator"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="response"/>

    <TextView
        android:id="@+id/textSecondResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textResponse"
        app:layout_constraintTop_toBottomOf="@+id/textResponse"
        tools:text="second response" />

    <Button
        android:id="@+id/buttonStartActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Start Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>